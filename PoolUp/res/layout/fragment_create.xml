<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <EditText
        android:id="@+id/etToEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="To-"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etToEmail"
        android:layout_below="@+id/etToEmail"
        android:layout_marginTop="54dp"
        android:ems="10"
        android:hint="Subject" />

    <EditText
        android:id="@+id/etMessageBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etSubject"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Message" />

    <Button
        android:id="@+id/bSendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/etMessageBody"
        android:layout_below="@+id/etMessageBody"
        android:layout_marginTop="53dp"
        android:text="Send!" />
 
</RelativeLayout>